<div class='form form--auth'>
  <h3>Account</h3>
  <p>Change your basic account settings.</p>
  <hr>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <%= f.email_field :email, autofocus: true, placeholder: 'email' %>

    <%= f.text_field :username, placeholder: 'choose a username' %>

    <%= f.url_field :image, placeholder: 'enter the url to your profile picture (optional)' %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <!-- require password to change profile details unless authenticated with github -->
    <% unless current_user.provider == 'github' %>
      <%= f.password_field :current_password, autocomplete: 'off', required: true, placeholder: 'current password' %>
    <% end %>

    <%= f.submit 'Update' %>
  <% end %>

  <%= link_to 'Cancel my account', registration_path(resource_name), data: { confirm: 'Are you sure?' }, method: :delete %>
</div>

<% unless current_user.provider == 'github' %>
  <div class='form form--auth'>
    <h3>Password</h3>
    <p>Change your password.</p>
    <hr>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

        <%= f.password_field :current_password, autocomplete: 'off', required: true, placeholder: 'current password' %>

        <%= f.password_field :password, autocomplete: 'off', required: true, placeholder: 'new password' %>
        
        <%= f.password_field :password_confirmation, autocomplete: 'off', required: true, placeholder: 'verify new password' %>

      <%= f.submit 'Update' %>
    <% end %>
  </div>
<% end %>
