<%= form_for(@challenge) do |f| %>
  <%= f.text_field :name, autofocus: true, placeholder: 'challenge name' %>

  <%= f.text_field :short_description, placeholder: 'short description' %>

  <%= f.text_area :long_description, placeholder: 'long description' %>

  <%= f.select(:difficulty, Challenge.difficulties.keys.map {|difficulty| [difficulty]}, prompt: 'Select a difficulty') %>

  <%= f.fields_for :challenge_tags do |tag| %>
    <%= tag.collection_select(:tag_id, Tag.all, :id, :name, prompt: 'Select a tag') %>
  <% end %>

  <%= f.submit 'Submit' %>
<% end %>
